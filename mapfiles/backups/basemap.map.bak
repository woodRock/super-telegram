      "wms_onlineresource"  "http://wms.niwa.co.nz/basemap?"
      "wms_srs"             "EPSG:4326"

      "wfs_title"           "Phase2 track"
      "wfs_onlineresource"  "http://wms.niwa.co.nz/basemap?"
      "wfs_srs"             "EPSG:4326"
    END
  END

 SYMBOL
