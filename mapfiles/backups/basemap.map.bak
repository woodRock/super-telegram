    FILLED true
    POINTS 1 1 END
  END

  SYMBOL
    NAME "RoadCl"
    TYPE ellipse
    POINTS
        1 1
    END
  END

  SYMBOL
    NAME "FatLine"
    TYPE ellipse
    POINTS 1 1 END
  END

  OUTPUTFORMAT
    NAME GIF
    DRIVER "GD/GIF"
    MIMETYPE "image/gif"
    IMAGEMODE PC256
    EXTENSION "gif"
    TRANSPARENT ON
  END

  OUTPUTFORMAT
    NAME PNG24
    DRIVER "AGG/PNG"
    MIMETYPE "image/png"
    EXTENSION PNG
    IMAGEMODE RGBA
    TRANSPARENT ON
  END

