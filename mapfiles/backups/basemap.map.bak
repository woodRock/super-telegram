  #
  # Layer roadcl
  #
  # Note:
  #   - Upgraded October 2014 by Rainer Spittel
  #   - Supported interfaces : WMS
  #
  LAYER
    NAME "roadcl"
    GROUP "basemap"
    TYPE line
    STATUS on

    CONNECTIONTYPE POSTGIS
    CONNECTION "dbname=basemap user=mapserv host=localhost"

    DATA "the_geom from (select * from roadcl) as myquery using unique gid using srid=4326"

    PROCESSING "CLOSE_CONNECTION=DEFER"

    METADATA
      "wms_title"           "Road Centreline"
      "wms_srs"             "EPSG:4326"

      "wms_group_title"     "basemap"
      "wms_enable_request"	"*"
      "gml_include_items"   "all"
    END

    PROJECTION
      "init=epsg:4326"
    END

    CLASS
        EXPRESSION ("[roadclass]" in "3,4" )
        MINSCALE 300000
        STYLE
            COLOR 198 151 25
            ANTIALIAS true
            WIDTH 3
        END
        STYLE
            COLOR 248 201 75
            ANTIALIAS true
            WIDTH 2
        END
    END

    CLASS
        EXPRESSION ("[roadclass]" in "3,4" )
        MAXSCALE 300000
        STYLE
            COLOR 198 151 25
            ANTIALIAS true
            WIDTH 4
        END
        STYLE
            COLOR 248 201 75
            ANTIALIAS true
            WIDTH 3
        END
    END

    CLASS
        EXPRESSION ("[roadclass]" == "2" )
        MAXSCALE 300000
        STYLE
            COLOR 228 181 25
            WIDTH 2
        END
    END

    CLASS
        EXPRESSION ("[roadclass]" in "1" )
        MAXSCALE 300000
        MINSCALE 100000
        STYLE
            COLOR 120 120 120
            WIDTH 1
        END
    END

    CLASS
        EXPRESSION ("[roadclass]" in "1" )
        MAXSCALE 100000
        STYLE
            COLOR 120 120 120
            WIDTH 2
        END
    END

    CLASS
        EXPRESSION ("[roadclass]" in "0" )
        MAXSCALE 100000
        STYLE
            COLOR 120 120 120
            WIDTH 1
        END
    END
  END

