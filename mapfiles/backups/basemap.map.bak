  #
  # Layer populated_places
  #
  # Note:
  #   - Upgraded October 2014 by Rainer Spittel
  #   - Supported interfaces : WMS
  #
  LAYER
    NAME "populated_places"
    GROUP "basemap"
    TYPE annotation
    STATUS on

    CONNECTIONTYPE POSTGIS
    CONNECTION "dbname=basemap user=mapserv host=localhost"

    DATA "the_geom from (select * from placenames where desc_code in ('LOC','METR','POPL','TOWN','USAT')) as myquery using unique gid using srid=4326"

    PROCESSING "CLOSE_CONNECTION=DEFER"

    TEMPLATE "template.html"

	LABELITEM "name"
	LABELCACHE ON

    CLASS
		EXPRESSION ("[desc_code]" in "METR" )
		LABEL
 		  PRIORITY 10
		  TYPE TRUETYPE
		  FONT "dejavu"
		  SIZE 12
		  BUFFER 40
		  COLOR         20  20  20
		  OUTLINECOLOR 255 255 255
		  OUTLINEWIDTH 2
		  POSITION AUTO
		  PARTIALS FALSE
		END
    END

    CLASS
		EXPRESSION ("[desc_code]" in "USAT" )
		LABEL
		  PRIORITY 9
		  TYPE TRUETYPE
		  FONT "dejavu"
		  SIZE 10
		  BUFFER 30
		  COLOR         20  20  20
		  OUTLINECOLOR 255 255 255
		  OUTLINEWIDTH 2
		  POSITION AUTO
		  PARTIALS FALSE
		END
    END

    CLASS
		EXPRESSION ("[desc_code]" in "TOWN" )
		LABEL
		  PRIORITY 7
		  TYPE TRUETYPE
		  FONT "dejavu"
		  SIZE 10
		  BUFFER 30
		  COLOR         20  20  20
		  OUTLINECOLOR 255 255 255
		  OUTLINEWIDTH 2
		  POSITION AUTO
		  PARTIALS FALSE
		END
    END

    CLASS
		EXPRESSION ("[desc_code]" in "POPL" )
		LABEL
		  PRIORITY 8
		  TYPE TRUETYPE
		  FONT "dejavu"
		  SIZE 9
		  BUFFER 20
		  COLOR         20  20  20
		  OUTLINECOLOR 255 255 255
		  OUTLINEWIDTH 2
		  POSITION AUTO
		  PARTIALS FALSE
		END
    END

    CLASS
		EXPRESSION ("[desc_code]" in "LOC" )
		MAXSCALE 300000
		LABEL
		  PRIORITY 6
		  TYPE TRUETYPE
		  FONT "dejavu"
		  SIZE 8
		  BUFFER 50
		  COLOR         20  20  20
		  OUTLINECOLOR 255 255 255
		  OUTLINEWIDTH 1
		  POSITION AUTO
		  PARTIALS FALSE
		END
    END

    METADATA
      "wms_title"           "Populates Places"
      "wms_srs"             "EPSG:4326"

      "wms_group_title"     "basemap"
      "wms_enable_request"	"*"
      "gml_include_items"   "all"
    END

    PROJECTION
      "init=epsg:4326"
    END
  END

