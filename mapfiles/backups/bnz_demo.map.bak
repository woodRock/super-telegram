  #
  # Layer MITS_sites
  #
  # Note:
  #   - Upgraded October 2014 by Rainer Spittel
  #   - Supported interfaces : WFS & WMS
  #
  # "BOX(-176.61411 -46.5665 183.6401 -34.4364)"
  LAYER
    NAME "MITS_sites"
    TYPE point
    STATUS on
    DUMP true

    CONNECTIONTYPE POSTGIS
    CONNECTION "dbname=test_mafbnz user=mapserv host=localhost"

    DATA 'geom from (select min(id) as id,
                            placename,
                            port,
                            ST_X(geom) as longitude,
                            ST_Y(geom) as latitude,
                            geom 
                     from mits
                     where geom notnull
                     group by placename,
                              port,
                              longitude,
                              latitude,
                              geom
                     union
                     select min(id)+(select max(ID) from mits) as id,
                            placename,
                            port,
                            ST_X(ST_SHIFT_LONGITUDE(geom)) as longitude,
                            ST_Y(geom) as latitude,
                            ST_SHIFT_LONGITUDE(geom) as geom
                     from mits
                     where geom notnull
                       and (ST_X(geom) > 180
                            or ST_X(geom)< 0)
                     group by placename,
                              port,
                              longitude,
                              latitude,
                              geom) as myquery 
          using unique id using srid=4326'

    METADATA
      "ows_title"            "MITS Sites"
      "ows_srs"              "EPSG:4326"
      "ows_extent"           "-176.61411 -46.5665 183.6401 -34.4364"

      "wms_enable_request"   "*"
      "wfs_enable_request"   "*"

      "gml_featureid"        "id"
      "gml_include_items"    "all"
    END

    PROJECTION
      "init=epsg:4326"
    END

    CLASS
      NAME  "mits_point"
      STYLE
        SYMBOL "circle"
        SIZE 5
        COLOR 255 0 0
        ANTIALIAS true
      END
