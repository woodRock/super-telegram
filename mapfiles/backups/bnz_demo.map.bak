  #
  # Layer wharves
  #
  # Note:
  #   - Upgraded October 2014 by Rainer Spittel
  #   - Supported interfaces : WFS & WMS
  #
  # "BOX(-176.709094 -47.245378,183.761794 -34.516144)"
  LAYER
    NAME "wharves"
    TYPE line
    STATUS on
    DUMP true

    CONNECTIONTYPE POSTGIS
    CONNECTION "dbname=corax2005 user=mapserv host=localhost"

    DATA "the_geom from (select gid,
                                fid,
                                name,
                                wharf_use,
                                the_geom
                          from wharf_cl
                          union
                          select gid+(select max(gid) from wharf_cl) as gid,
                                 fid+(select max(fid) from wharf_cl) as fid,
                                 name,
                                 wharf_use,
                                 the_geom
                          from chat_wharf_cl
                          union
                          select gid+10+(select max(gid) from wharf_cl) as gid,
                                 fid+10+(select max(fid) from wharf_cl) as fid,
                                 name,
                                 wharf_use,
                                 ST_shift_longitude(the_geom) as the_geom
                          from chat_wharf_cl
                         ) as myquery
          using unique gid using srid=4326"

    METADATA
      "ows_title"            "Wharves"
      "ows_srs"              "EPSG:4326"
      "ows_extent"           "-176.709094 -47.245378 183.761794 -34.516144"

      "wms_enable_request"   "*"
      "wfs_enable_request"   "*"

      "gml_featureid"        "gid"
      "gml_include_items"    "all"
    END

    PROJECTION
      "init=epsg:4326"
    END

    CLASS
      NAME  "Region_class"
      STYLE
        SYMBOL "fatline"
        SIZE 2
        COLOR 17 10 7
        ANTIALIAS true
      END
    END

  END # wharf layer

  #
  # Layer rivers
  #
  # Note:
  #   - Upgraded October 2014 by Rainer Spittel
  #   - Supported interfaces : WFS & WMS
  #
  # "BOX(166.433142 -47.268132,183.572413 -34.422218)"
  LAYER
    NAME "rivers"
    TYPE polygon
    STATUS on
    DUMP true

    CONNECTIONTYPE POSTGIS
    CONNECTION "dbname=corax2005 user=mapserv host=localhost"

    DATA "the_geom from (select gid,
                                the_geom
                          from river_poly
                          where ST_AREA(the_geom) > 0.0001
                          union
                          select gid+(select max(gid) from wharf_cl) as gid,
                                 the_geom
                          from chat_river_poly
                          where ST_AREA(the_geom) > 0.0001
                          union
                      select gid+10000+(select max(gid) from wharf_cl) as gid,
                                 ST_shift_longitude(the_geom) as the_geom
                          from chat_river_poly
                          where ST_AREA(the_geom) > 0.0001
                          union
                          select gid,
                                 the_geom
                          from lake_poly
                          where ST_AREA(the_geom) > 2.0e-05
                         ) as myquery
          using unique gid using srid=4326"

    METADATA
      "ows_title"            "Rivers"
      "ows_srs"              "EPSG:4326"
      "ows_extent"           "166.433142 -47.268132 183.572413 -34.422218"

      "wms_enable_request"   "*"
      "wfs_enable_request"   "*"

      "gml_featureid"        "gid"
      "gml_include_items"    "all"
    END

    PROJECTION
      "init=epsg:4326"
    END

    CLASS
      NAME  "river_class"
      STYLE
        COLOR 10 10 255
        ANTIALIAS true
      END
    END

  END # rivers layer

