  #
  # Layer ports
  #
  # Note:
  #   - Upgraded October 2014 by Rainer Spittel
  #   - Supported interfaces : WFS & WMS
  #
  # Extent: "BOX(-176.8666667 -46.89697,178.0333333 -35.049209)"
  LAYER
    NAME "ports"
    TYPE point
    STATUS on
    DUMP true

    CONNECTIONTYPE POSTGIS
    CONNECTION "dbname=test_mafbnz user=mapserv host=localhost"

    DATA "geom from (select port,
                            gid,
                            place_type as type,
                            code,
                            ST_Shift_Longitude(geom) as geom
                     from ports
                     where geom notnull) as myquery
          using unique gid using srid=4326"

    METADATA
      "ows_title"            "Port"
      "ows_srs"              "EPSG:4326"
      "ows_extent"           "-176.8666667 -46.89697 178.0333333 -35.049209"

      "wms_enable_request"   "*"
      "wfs_enable_request"   "*"

      "gml_featureid"        "gid"
      "gml_include_items"    "all"
    END

    PROJECTION
      "init=epsg:4326"
    END

    CLASS
      NAME "port_point"
      STYLE
        SYMBOL "circle"
        SIZE 5
        COLOR 255 0 0
        ANTIALIAS true
      END
    END

  END # layer

