      "wfs_enable_request"   "*"

      "gml_featureid"        "gid"
      "gml_include_items"    "all"
    END

    PROJECTION
      "init=epsg:4326"
    END

    CLASS
      NAME "Surv_native"
      STYLE
        SYMBOL "circle"
        SIZE 5
        COLOR 255 0 0
        ANTIALIAS true
      END
    END

